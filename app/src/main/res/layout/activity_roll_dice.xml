<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.thilo20.machikoropad.RollDiceActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/roll_dice"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <org.ricts.abstractmachine.ui.utils.MultiLineRadioGroup
        android:id="@+id/radiogroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/dice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/one_inverted"
            android:padding="@dimen/dice_padding" />

        <RadioButton
            android:id="@+id/dice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/two"
            android:padding="@dimen/dice_padding" />

        <RadioButton
            android:id="@+id/dice3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/three"
            android:padding="@dimen/dice_padding" />

        <RadioButton
            android:id="@+id/dice4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/four"
            android:padding="@dimen/dice_padding" />

        <RadioButton
            android:id="@+id/dice5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/five"
            android:padding="@dimen/dice_padding" />

        <RadioButton
            android:id="@+id/dice6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/six"
            android:padding="@dimen/dice_padding" />
    </org.ricts.abstractmachine.ui.utils.MultiLineRadioGroup>

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radiogroup1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:textOff="@string/toggle_double_roll"
        android:textOn="@string/toggle_single_roll" />

    <org.ricts.abstractmachine.ui.utils.MultiLineRadioGroup
        android:id="@+id/radiogroup2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toggleButton"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/dice21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/one"
            android:padding="@dimen/dice_padding" />

        <RadioButton
            android:id="@+id/dice22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/two"
            android:padding="@dimen/dice_padding" />

        <RadioButton
            android:id="@+id/dice23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/three"
            android:padding="@dimen/dice_padding" />

        <RadioButton
            android:id="@+id/dice24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/four"
            android:padding="@dimen/dice_padding" />

        <RadioButton
            android:id="@+id/dice25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/five"
            android:padding="@dimen/dice_padding" />

        <RadioButton
            android:id="@+id/dice26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/six"
            android:padding="@dimen/dice_padding" />
    </org.ricts.abstractmachine.ui.utils.MultiLineRadioGroup>

    <TextView
        android:id="@+id/textViewStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radiogroup2"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:text="last rolls"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <CheckBox
        android:id="@+id/cbExtraTurn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/toggleButton"
        android:layout_alignBottom="@+id/toggleButton"
        android:layout_toEndOf="@+id/toggleButton"
        android:text="@string/amusement_park" />

    <CheckBox
        android:id="@+id/cbHarbour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/toggleButton"
        android:layout_alignBottom="@+id/toggleButton"
        android:layout_toEndOf="@+id/cbExtraTurn"
        android:text="@string/harbour" />

</RelativeLayout>
